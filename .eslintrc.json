{
	"extends": "next/core-web-vitals",
	"rules": {
		"indent": ["warn", "tab"],
		"max-params": ["warn", 4],
		"padding-line-between-statements": [
			"error",
			{
				"blankLine": "always",
				"prev": "*",
				"next": "return"
			},
			{
				"blankLine": "always",
				"prev": ["const", "let", "var"],
				"next": "*"
			},
			{
				"blankLine": "any",
				"prev": ["const", "let", "var"],
				"next": ["const", "let", "var"]
			},
			{
				"blankLine": "always",
				"prev": ["case", "default"],
				"next": "*"
			}
		]
	}
}
